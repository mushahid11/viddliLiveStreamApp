<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile">

    <RelativeLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgg"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:src="@drawable/imran"
            android:layout_height="@dimen/_40sdp"
            app:civ_border_width="3dp"
            app:civ_border_color="#E6E3E3"/>

        <RelativeLayout

            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/logo_preview"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp">
            </ImageView>

            <TextView
                android:layout_marginStart="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_22sdp"
                android:text="viddli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </RelativeLayout>


        <ImageView
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:id="@+id/overlapImage"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/round_imageforsearchbar"
            android:src="@drawable/ic_baseline_search_24" />

        <ImageView
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/round_imageforsearchbar"
            android:src="@drawable/shopping_cart_24" />

    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
           android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_1sdp"
            android:paddingBottom="@dimen/_20sdp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/imran"
            app:civ_border_width="5dp"
            app:civ_border_color="#E6E3E3"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
               android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="bottom"
                    android:layout_weight="2"
                    android:textSize="@dimen/_28sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColor="@color/black"
                    android:text="Anjlina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <RatingBar
                    android:paddingTop="@dimen/_5sdp"
                    android:layout_weight="1"
                   android:layout_marginStart="@dimen/_20sdp"
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.1"
                    android:isIndicator="true" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_28sdp"
                    android:textColor="@color/black"
                    android:text="110"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                    <TextView

                        android:paddingStart="@dimen/_10sdp"
                        android:text="Streams"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

            </LinearLayout>
                <View
                    android:layout_width="4dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:background="#DCD7D7" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="@dimen/_28sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:text="16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                         android:paddingEnd="@dimen/_10sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:text="Followers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
                <View
                    android:layout_width="4dp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center"
                    android:background="#DCD7D7" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="@dimen/_28sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:text="192"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView

                        android:paddingStart="@dimen/_10sdp"
                        android:text="Following"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginEnd="@dimen/_20sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/white"
            android:text="Follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Button >

        <TextView
            android:background="@drawable/dots"
          android:textColor="@color/black"
            android:maxLines="1"
            android:id                      = "@+id/tvFixture"
            android:layout_width            = "wrap_content"
            android:layout_height           = "wrap_content"
            android:text                    = "..."
            android:lines                   = "1"
            android:ems                     = "3"
            android:gravity                 = "center"
            android:ellipsize="end"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:paddingStart="@dimen/_20sdp"
                android:textColor="#9F0C36"
                android:text="Recent Live Stream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/black"
                android:text="2h 45m ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/green"
                android:text="Upcoming Live Stream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/black"
                android:text="2h 45m ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:backgroundTint="@color/green"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:textColor="@color/white"
            android:text="Follow"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content">
        </Button >

        <TextView
            android:layout_marginEnd="@dimen/_10sdp"
            android:textSize="@dimen/_8sdp"
            android:paddingStart="@dimen/_1sdp"
            android:textColor="@color/black"
            android:text="Live Stream is available now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <ImageView
           android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:adjustViewBounds="true"
            android:background="@drawable/round_imageforsearchbar"
            android:src="@drawable/online_prediction_24" />

    </LinearLayout>



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_StreamsProductReview"
        app:tabSelectedTextColor="@color/blue"
        app:tabTextColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager_streamsProductReview"
        android:layout_below="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>



</LinearLayout>